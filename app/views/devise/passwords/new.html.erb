

<h2 class="formtitle">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class="boxlab"><%= f.label :email %><br /></div>
    <%= f.email_field :email, autofocus: true, class: "boxfield" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "pp32" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
