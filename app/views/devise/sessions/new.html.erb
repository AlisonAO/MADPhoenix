<h2 class="formtitle">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="boxlab"><%= f.label :email %><br /></div>
    <%= f.email_field :email, autofocus: true, class: "boxfield" %>
  </div>

  <div class="field">
    <div class="boxlab"><%= f.label :password %><br /></div>
    <%= f.password_field :password, autocomplete: "off", class: "boxfield" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <div class="boxlabrem"><%= f.label :remember_me %></div>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "submit" %>
  </div>
  
<% end %>


<%= render "devise/shared/links" %>

